  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/node_modules/@loopback/build/bin/run-mocha.js",
      "cwd": "${workspaceRoot}",
      "args": [
        "--recursive",
        "--require",
        "source-map-support/register",
        "--allow-console-logs",
        "dist/test/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Current Test",
      "program": "${workspaceFolder}/node_modules/@loopback/build/bin/run-mocha.js",
      "cwd": "${workspaceRoot}",
      "args": [
        "--require",
        "source-map-support/register",
        "--allow-console-logs",
        "${workspaceFolder}/dist/${relativeFile}"
      ]
    }
  ]
}
